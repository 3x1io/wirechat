{
    "name": "namu/wirechat",
    "description": "A Laravel Livewire-powered messaging app for teams, supporting private 1:1 chats and group conversations",
    "license": "MIT",
    "version": "0.0.1", 
    "autoload": {
        "psr-4": {
            "Namu\\WireChat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Namu\\WireChat\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Namu\\WireChat\\Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Namu\\WireChat\\Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "Namu Makwembo"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Namu\\WireChat\\WireChatServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^8.1|^8.2|^8.3|^8.4",
        "livewire/livewire": "^3.2.3",
        "laravel/framework": "^10.0|^11.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "orchestra/testbench": "^8.24|^9.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-laravel": "^2.4",
        "orchestra/testbench-dusk": "^8.26|^9.0",
        "christophrumpel/missing-livewire-assertions": "^2.8",
        "laravel/pint": "^1.18"
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare",
            "@dusk:install-chromedriver"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "@php vendor/bin/phpstan analyse"
        ],
        "dusk:install-chromedriver": "@php vendor/bin/dusk-updater detect --auto-update --ansi",
        "test": [
            "@php vendor/bin/pest"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
